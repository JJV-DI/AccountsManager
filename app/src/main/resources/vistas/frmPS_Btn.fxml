<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>

<Button fx:id="btnUser" contentDisplay="TOP" mnemonicParsing="false" onAction="#btnUserPressed" text="Example69" textAlignment="CENTER" textFill="#f3f3f3" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PS_BtnController">
   <graphic>
      <Pane>
         <children>
            <ImageView fx:id="imgUserImage" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </Pane>
   </graphic>
   <contextMenu>
      <ContextMenu fx:id="ctxtMenu">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#ctxtEditPressed" text="Edit" />
            <MenuItem mnemonicParsing="false" onAction="#ctxtRemovePressed" text="Remove" />
        </items>
      </ContextMenu>
   </contextMenu>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
   <tooltip>
      <Tooltip text="Open user (right click for more options)" />
   </tooltip>
   <styleClass>
      <String fx:value="secondary-color" />
      <String fx:value="text-color" />
      <String fx:value="hover-color" />
   </styleClass>
</Button>
